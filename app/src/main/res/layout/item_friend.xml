<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/friendItem_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/friendItem_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/friendItem_iv"
        app:layout_constraintBottom_toBottomOf="@id/friendItem_iv"
        app:layout_constraintTop_toTopOf="@id/friendItem_iv"/>

    <View
        app:layout_constraintTop_toBottomOf="@+id/friendItem_iv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#404040"/>


</androidx.constraintlayout.widget.ConstraintLayout>